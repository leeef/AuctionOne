<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/qb_px_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        >

        <com.hlnwl.auction.view.widget.ClearEditText
            android:id="@+id/item_spec_name"
            android:layout_width="@dimen/qb_px_100"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/qb_px_15"
            android:paddingBottom="@dimen/qb_px_15"
            android:paddingLeft="@dimen/qb_px_15"
            android:hint="@string/input_spec_name"
            android:gravity="center_vertical"
            android:background="@null"
            android:textSize="@dimen/qb_px_12"/>
        <View
            android:layout_width="@dimen/qb_px_1"
            android:layout_height="match_parent"
            android:background="@color/line"/>

        <com.hlnwl.auction.view.widget.ClearEditText
            android:id="@+id/item_spec_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/qb_px_15"
            android:paddingBottom="@dimen/qb_px_15"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/input_spec_content"
            android:textSize="@dimen/qb_px_12"
            android:layout_marginRight="@dimen/qb_px_12"
            android:paddingLeft="@dimen/qb_px_10"/>

        <LinearLayout
            android:id="@+id/item_spec_del"
            android:layout_width="@dimen/qb_px_50"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/qb_px_15"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/qb_px_16"
                android:layout_height="@dimen/qb_px_16"
                android:src="@mipmap/shanchu"
                />
        </LinearLayout>



    </LinearLayout>


</LinearLayout>