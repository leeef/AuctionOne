<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_70"
        android:background="@drawable/coner_bg_white"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/qb_px_3"
        android:orientation="vertical"
        android:paddingLeft="@dimen/qb_px_15"
        android:paddingRight="@dimen/qb_px_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/item_address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:text="yougui" />

            <TextView
                android:id="@+id/item_address_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="133"
                android:layout_marginLeft="@dimen/dp_10" />
            <TextView
                android:id="@+id/item_address_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[默认]"
                android:textColor="@color/main"
                android:layout_marginLeft="@dimen/dp_40"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:id="@+id/item_address_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/coner_bg_white"
        android:layout_marginLeft="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">


       <ImageView
           android:id="@+id/my_address_default"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@mipmap/xz"
           android:visibility="gone"/>

        <ImageView
            android:id="@+id/my_address_undefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wx"
            android:visibility="visible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置默认"
            android:layout_marginLeft="@dimen/qb_px_3"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/item_address_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/qb_px_18"
            android:layout_height="@dimen/qb_px_18"
            android:src="@mipmap/bianji"/>

        <TextView
            android:layout_marginLeft="@dimen/qb_px_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/item_address_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/qb_px_18"
            android:layout_height="@dimen/qb_px_18"
            android:src="@mipmap/shanchu"
            android:layout_marginLeft="@dimen/qb_px_20"/>
        <TextView
            android:layout_marginLeft="@dimen/qb_px_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>