<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_50"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="@dimen/qb_px_100"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/qb_px_15"
            android:text="@string/spec_name"/>

        <TextView
            android:id="@+id/shop_join_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:text="@string/spec_content"
            android:textSize="@dimen/qb_px_12"
            android:layout_marginRight="@dimen/qb_px_12"/>

    </LinearLayout>


</LinearLayout>