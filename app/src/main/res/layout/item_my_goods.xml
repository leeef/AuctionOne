<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_120"
    android:background="@color/white"
    android:layout_marginTop="@dimen/qb_px_1"
    android:gravity="center_vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_10">

        <ImageView
            android:id="@+id/item_my_goods_img"
            android:layout_width="@dimen/qb_px_120"
            android:layout_height="@dimen/qb_px_100"

            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <ImageView
            android:id="@+id/item_is_fine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/jingpinkuang"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/qb_px_10"
        android:layout_marginRight="@dimen/qb_px_10">

        <TextView
            android:id="@+id/item_my_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/qb_px_14"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/qb_px_15"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/qb_px_5"
            android:layout_marginTop="@dimen/qb_px_10"
            android:layout_marginLeft="@dimen/qb_px_10"
            android:layout_marginRight="@dimen/qb_px_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_my_goods_chujia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/qb_px_12"
                />




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_marginBottom="@dimen/qb_px_15">

            <TextView
                android:id="@+id/item_my_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main"
                android:textSize="@dimen/qb_px_12"
                android:text="@string/yijia"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right">




            <LinearLayout
                android:id="@+id/item_my_goods_edit"
                android:layout_width="@dimen/qb_px_70"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="bottom|right">

                <ImageView
                    android:layout_width="@dimen/qb_px_15"
                    android:layout_height="@dimen/qb_px_15"
                    android:src="@mipmap/bianji"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit"
                    android:layout_marginLeft="@dimen/qb_px_5"
                    android:textSize="@dimen/qb_px_13"/>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/item_my_goods_del"
                android:layout_width="@dimen/qb_px_70"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="bottom|right">

                <ImageView
                    android:layout_width="@dimen/qb_px_15"
                    android:layout_height="@dimen/qb_px_15"
                    android:src="@mipmap/shanchu"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delete"
                    android:layout_marginLeft="@dimen/qb_px_5"
                    android:textSize="@dimen/qb_px_13"/>


            </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>