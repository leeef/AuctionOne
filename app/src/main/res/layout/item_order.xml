<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/qb_px_1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_40"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.allen.library.CircleImageView
            android:id="@+id/item_order_shopimg"
            android:layout_width="@dimen/qb_px_30"
            android:layout_height="@dimen/qb_px_30"
            android:layout_marginLeft="@dimen/qb_px_15"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/item_order_shopname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_10"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/qb_px_15"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/item_order_status"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_marginRight="@dimen/qb_px_15"
            android:gravity="center_vertical|right"
            android:text=""
            android:textColor="@color/main"
            android:visibility="gone" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/item_order_good"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_80"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_order_good_img"
            android:layout_width="@dimen/qb_px_60"
            android:layout_height="@dimen/qb_px_60"
            android:layout_marginLeft="@dimen/dp_10"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/qb_px_10"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_order_good_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="" />

            <TextView
                android:id="@+id/item_order_bid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/qb_px_10"
                android:gravity="start"
                android:textColor="@color/main" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_order_yfh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        android:paddingRight="@dimen/qb_px_10"
        android:visibility="visible">

        <com.allen.library.SuperButton
            android:id="@+id/item_order_yfh_see"
            android:layout_width="@dimen/qb_px_70"
            android:layout_height="@dimen/qb_px_30"
            android:layout_margin="@dimen/qb_px_5"
            android:text="@string/see_wuliu"
            android:textSize="@dimen/qb_px_13"
            app:sCornersRadius="5dp"
            app:sSolidColor="@color/transparent"
            app:sStrokeColor="@color/black"
            app:sStrokeWidth="0.2dp" />

        <com.allen.library.SuperButton
            android:id="@+id/item_order_qrsh"
            android:layout_width="@dimen/qb_px_70"
            android:layout_height="@dimen/qb_px_30"
            android:layout_margin="@dimen/qb_px_5"
            android:text="@string/querenshouhuo"
            android:textColor="@color/main"
            android:textSize="@dimen/qb_px_13"
            app:sCornersRadius="5dp"
            app:sSolidColor="@color/transparent"
            app:sStrokeColor="@color/main"
            app:sStrokeWidth="0.2dp" />

        <com.allen.library.SuperButton
            android:id="@+id/pay"
            android:layout_width="@dimen/qb_px_70"
            android:layout_height="@dimen/qb_px_30"
            android:layout_margin="@dimen/qb_px_5"
            android:text="@string/pay_now"
            android:textColor="@color/main"
            android:textSize="@dimen/qb_px_13"
            android:visibility="gone"
            app:sCornersRadius="5dp"
            app:sSolidColor="@color/transparent"
            app:sStrokeColor="@color/main"
            app:sStrokeWidth="0.2dp" />

        <com.allen.library.SuperButton
            android:id="@+id/item_order_comment"
            android:layout_width="@dimen/qb_px_70"
            android:layout_height="@dimen/qb_px_30"
            android:layout_margin="@dimen/qb_px_5"
            android:text="@string/comment"
            android:textColor="@color/main"
            android:textSize="@dimen/qb_px_13"
            app:sCornersRadius="5dp"
            app:sSolidColor="@color/transparent"
            app:sStrokeColor="@color/main"
            app:sStrokeWidth="0.2dp" />

        <com.allen.library.SuperButton
            android:id="@+id/item_order_cancel"
            android:layout_width="@dimen/qb_px_70"
            android:layout_height="@dimen/qb_px_30"
            android:layout_margin="@dimen/qb_px_5"
            android:text="@string/del_order"
            android:textSize="@dimen/qb_px_13"
            app:sCornersRadius="5dp"
            app:sSolidColor="@color/transparent"
            app:sStrokeColor="@color/black"
            app:sStrokeWidth="0.2dp" />


    </LinearLayout>

</LinearLayout>