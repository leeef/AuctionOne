<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/title" />
    <com.hlnwl.auction.utils.my.HintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/alipay_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_50"
                    android:layout_marginTop="@dimen/qb_px_1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/qb_px_15"
                        android:text="@string/alipay_msg" />

                    <TextView
                        android:id="@+id/alipay_msg_edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/qb_px_15"
                        android:gravity="center_vertical|right"
                        android:text="@string/edit"
                        android:textColor="@color/bar_grey_90" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_50"
                    android:layout_marginTop="@dimen/qb_px_1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/alipay_msg_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/qb_px_15"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/alipay_msg_account"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/qb_px_15"
                        android:layout_weight="1"
                        android:textColor="@color/bar_grey_90" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bank_card_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qb_px_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_50"
                    android:layout_marginTop="@dimen/qb_px_1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/qb_px_15"
                        android:text="@string/bank_card_msg" />

                    <TextView
                        android:id="@+id/bank_card_msg_edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/qb_px_15"
                        android:gravity="center_vertical|right"
                        android:text="@string/edit"
                        android:textColor="@color/bar_grey_90" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_50"
                    android:layout_marginTop="@dimen/qb_px_1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bank_card_msg_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/qb_px_15"
                        android:layout_weight="3" />

                    <TextView
                        android:id="@+id/bank_card_msg_bank_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/qb_px_15"
                        android:layout_weight="2"
                        android:textColor="@color/bar_grey_90" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_50"
                    android:layout_marginTop="@dimen/qb_px_1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bank_card_msg_card_num"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/qb_px_15"
                        android:layout_weight="3" />

                    <TextView
                        android:id="@+id/bank_card_msg_khh"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/qb_px_15"
                        android:layout_weight="2"
                        android:textColor="@color/bar_grey_90" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </com.hlnwl.auction.utils.my.HintLayout>


</LinearLayout>