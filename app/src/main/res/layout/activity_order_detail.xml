<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <com.hlnwl.auction.utils.my.HintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/dingdan_banner"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/order_detail_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/qb_px_30"
                    android:layout_marginTop="@dimen/qb_px_20"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/order_detail_time_sh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/qb_px_30"
                    android:layout_marginTop="@dimen/qb_px_5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/qb_px_11" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_60"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/qb_px_25"
                    android:layout_height="@dimen/qb_px_25"
                    android:layout_marginLeft="@dimen/qb_px_15"
                    android:src="@mipmap/lanshou" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/qb_px_15"
                    android:layout_weight="1"
                    android:gravity="center_vertical">


                    <TextView
                        android:id="@+id/order_detail_bag_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main" />

                    <TextView
                        android:id="@+id/order_detail_bag_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/qb_px_5"
                        android:textColor="@color/font_gray_light"
                        android:textSize="@dimen/qb_px_10" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/qb_px_10"
                    android:src="@mipmap/more" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/address_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_80"
                android:layout_marginTop="@dimen/qb_px_1"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/qb_px_25"
                    android:layout_height="@dimen/qb_px_25"
                    android:layout_marginLeft="@dimen/qb_px_15"
                    android:layout_marginRight="@dimen/qb_px_15"
                    android:src="@mipmap/dizhi" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/order_detail_sh_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/main" />

                    <TextView
                        android:id="@+id/order_detail_sh_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/qb_px_5"
                        android:textColor="@color/font_gray_light"
                        android:textSize="@dimen/qb_px_10" />

                </LinearLayout>

                <TextView
                    android:id="@+id/order_detail_sh_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/qb_px_10" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_detail_good"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_80"
                android:layout_marginTop="@dimen/qb_px_10"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/order_detail_good_img"
                    android:layout_width="@dimen/qb_px_60"
                    android:layout_height="@dimen/qb_px_60"
                    android:layout_marginLeft="@dimen/qb_px_15"
                    android:layout_marginRight="@dimen/qb_px_15" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_40"
                    android:layout_marginTop="@dimen/qb_px_1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/order_detail_good_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/qb_px_50"
                        android:lineSpacingMultiplier="1.5"
                        android:text="111" />

                    <TextView
                        android:id="@+id/order_detail_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="111"
                        android:textColor="@color/main" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qb_px_10"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_40"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="@dimen/qb_px_3"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/qb_px_15"
                        android:layout_marginTop="@dimen/qb_px_10"
                        android:layout_marginBottom="@dimen/qb_px_10"
                        android:background="@color/main" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/qb_px_10"
                        android:text="@string/order_msg" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_25"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/order_detail_sn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/qb_px_15"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/order_detail_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/qb_px_15"
                        android:text="@string/copy"
                        android:textColor="@color/main" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/other_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/order_detail_pay_type"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/qb_px_25"
                        android:layout_marginLeft="@dimen/qb_px_15"
                        android:gravity="center_vertical" />

                    <TextView
                        android:id="@+id/order_detail_add_time"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/qb_px_25"
                        android:layout_marginLeft="@dimen/qb_px_15"
                        android:gravity="center_vertical" />

                    <TextView
                        android:id="@+id/order_detail_pay_time"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/qb_px_25"
                        android:layout_marginLeft="@dimen/qb_px_15"
                        android:gravity="center_vertical" />

                    <TextView
                        android:id="@+id/order_detail_fh_time"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/qb_px_25"
                        android:layout_marginLeft="@dimen/qb_px_15"
                        android:gravity="center_vertical" />

                    <LinearLayout
                        android:id="@+id/express_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/express_company"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/qb_px_25"
                            android:layout_marginLeft="@dimen/qb_px_15"
                            android:gravity="center_vertical" />

                        <TextView
                            android:id="@+id/express_number"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/qb_px_25"
                            android:layout_marginLeft="@dimen/qb_px_15"
                            android:gravity="center_vertical" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="@dimen/qb_px_20" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/pay_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_50"
                    android:background="@color/white"
                    android:gravity="right"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/goods_order_goto_pay"
                        android:layout_width="@dimen/qb_px_150"
                        android:layout_height="match_parent"
                        android:background="@color/main"
                        android:gravity="center"
                        android:text="@string/pay_now"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </com.hlnwl.auction.utils.my.HintLayout>

</LinearLayout>